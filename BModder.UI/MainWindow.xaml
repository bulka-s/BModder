<Window x:Class="BModder.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BModder.UI"
        mc:Ignorable="d"
        Title="BModder" Height="700" Width="1200"
        Background="#1E1E1E"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid>
            
            <StackPanel>
                <TextBlock Text="BModder"
                       Foreground="#00C853"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Left"/>

                <!-- Config path input -->
                <Label Content="Config path"/>
                <Grid HorizontalAlignment="Stretch" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="ConfigPathTextBox"
                         Grid.Column="0"
                         Style="{StaticResource path}"/>

                    <Button x:Name="BrowseConfigButton"
                        Grid.Column="1"
                        Content="Browse"
                        Style="{StaticResource acceptButton}"
                        Click="BrowseConfigButton_Click"/>
                </Grid>

                <!-- Game path input -->
                <Label Content="Game path"/>
                <Grid HorizontalAlignment="Stretch" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="GamePathTextBox"
                         Grid.Column="0"
                         Style="{StaticResource path}"/>

                    <Button x:Name="BrowseButton"
                        Grid.Column="1"
                        Content="Browse"
                        Style="{StaticResource acceptButton}"
                        Cursor="Hand"
                        Click="BrowseButton_Click"/>
                </Grid>

                <CheckBox x:Name="isCleanInstall"
                      Content="Clean install"/>

                <CheckBox x:Name="isOfflineInstall"
                      Content="Offline install"/>

                <!-- Offline mods path input -->
                <Label x:Name="offlineLabel" Content="Mods path" IsEnabled="False"/>
                <Grid HorizontalAlignment="Stretch" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="ModsPathTextBox"
                         Grid.Column="0"
                         Style="{StaticResource path}"
                         IsEnabled="False"/>

                    <Button x:Name="BrowseModsButton"
                        Grid.Column="1"
                        IsEnabled="False"
                        Content="Browse"
                        Style="{StaticResource acceptButton}"
                        Cursor="Hand"/>
                </Grid>
                
                <Button x:Name="InstallButton"
                        Style="{StaticResource acceptButton}"
                        Content="Install mods" Click="InstallButton_Click"/>
                
            </StackPanel>

            <ProgressBar Height="15"
                         VerticalAlignment="Bottom"
                         Margin="0 0 5 0"/>
        </Grid>

        <RichTextBox x:Name="LogBox"
                     Grid.Column="2"
                     IsReadOnly="True"
                     Background="#1E1E1E"
                     Foreground="White"
                     BorderBrush="#333"
                     FontFamily="Consolas"
                     FontSize="14"
                     Margin="10 0 0 0"
                     VerticalScrollBarVisibility="Auto"
                     Padding="10"/>
    </Grid>
</Window>