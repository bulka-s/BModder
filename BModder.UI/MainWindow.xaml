<Window x:Class="BModder.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BModder.UI"
        mc:Ignorable="d"
        Title="BModder" Height="700" Width="1200"
        Background="#1E1E1E"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <!-- Title -->
            <TextBlock Text="BModder"
                       Foreground="#00C853"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Left"/>   

            <!-- Game path input -->
            <Grid HorizontalAlignment="Stretch" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="ConfigPathTextBox"
                         Grid.Column="0"
                         Height="32"
                         Margin="0,0,5,0"
                         Padding="5"
                         FontSize="14"
                         Text="Enter your config path..."
                         Background="#2D2D2D"
                         Foreground="#FFFFFF"
                         BorderBrush="#444"
                         GotFocus="ConfigPathTextBox_LostFocus"/>  

                <Button x:Name="BrowseConfigButton"
                        Grid.Column="1"
                        Content="Browse"
                        Style="{StaticResource acceptButton}"
                        Background="#00C853"
                        Cursor="Hand"
                        Click="BrowseConfigButton_Click"
                        Margin="0,0,5,0"/>

                <Button x:Name="CheckConfigButton"
                        Grid.Column="2"
                        Content="Check Config"
                        Click="CheckConfigButton_Click"
                        Style="{StaticResource acceptButton}"/>
            </Grid>

            <Grid HorizontalAlignment="Stretch" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="GamePathTextBox"
                         Grid.Column="0"
                         Height="32"
                         Margin="0,0,5,0"
                         Padding="5"
                         FontSize="14"
                         Text="Enter your game path..."
                         Background="#2D2D2D"
                         Foreground="#FFFFFF"
                         BorderBrush="#444"
                         GotFocus="GamePathTextBox_GotFocus"/>

                <Button x:Name="BrowseButton"
                        Grid.Column="1"
                        Content="Browse"
                        Style="{StaticResource acceptButton}"
                        Background="#00C853"
                        Cursor="Hand"
                        Click="BrowseButton_Click"
                        Margin="0,0,5,0"/>

                <Button x:Name="CheckGameButton"
                        Grid.Column="2"
                        Content="Check Game"
                        Click="CheckGameButton_Click"
                        Style="{StaticResource acceptButton}"/>
            </Grid>
        </StackPanel>
        

        <!-- Log output -->
        <TextBox x:Name="LogTextBox"
                 Grid.Column="2"
                 Margin="0,10,0,0"
                 Background="#111"
                 Foreground="#B0BEC5"
                 FontFamily="Consolas"
                 FontSize="13"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Text="Ready."/>
    </Grid>
</Window>