<Window x:Class="BModder.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BModder"
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#121212"
        ResizeMode="NoResize">

    <Grid Margin="0">
        <!-- ================= Header ================= -->
        <Border Background="#1E1E1E" Height="60" VerticalAlignment="Top" BorderBrush="#2A2A2A" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <Image Source="pack://application:,,,/Assets/icon.png" Width="32" Height="32" Margin="0,0,10,0"/>
                <TextBlock Text="BModder" 
                           Foreground="#00C853"
                           FontWeight="Bold"
                           FontSize="24"
                           VerticalAlignment="Center"/>
                <TextBlock Text="  —  Simple mod installer" 
                           Foreground="#888"
                           FontSize="14"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- ================= Content ================= -->
        <Grid Margin="40,80,40,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL -->
            <Border Background="#1A1A1A"
                    CornerRadius="10"
                    Padding="25"
                    Margin="0,0,20,0"
                    BorderBrush="#2A2A2A"
                    BorderThickness="1"
                    Effect="{DynamicResource ShadowEffect}">
                <StackPanel>
                    <TextBlock Text="Installation Settings" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="#FFFFFF"
                               Margin="0,0,0,20"/>

                    <!-- Config path -->
                    <Label Content="Config path" />
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="ConfigPathTextBox" Style="{StaticResource path}" />
                        <Button x:Name="BrowseConfigButton" Content="Browse" Style="{StaticResource acceptButton}" Click="BrowseConfigButton_Click"/>
                    </Grid>

                    <!-- Game path -->
                    <Label Content="Game path" />
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="GamePathTextBox" Style="{StaticResource path}" />
                        <Button x:Name="BrowseButton" Content="Browse" Style="{StaticResource acceptButton}" Click="BrowseButton_Click"/>
                    </Grid>

                    <!-- Clean & Offline -->
                    <CheckBox x:Name="isCleanInstall" Content="Clean install" />
                    <CheckBox x:Name="isOfflineInstall" Content="Offline install" />

                    <!-- Mods path -->
                    <Label x:Name="offlineLabel" Content="Mods path" IsEnabled="False" />
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="ModsPathTextBox" Style="{StaticResource path}" IsEnabled="False"/>
                        <Button x:Name="BrowseModsButton" Content="Browse" IsEnabled="False" Style="{StaticResource acceptButton}"/>
                    </Grid>

                    <Button x:Name="InstallButton" Content="Install mods" Style="{StaticResource mainButton}" Click="InstallButton_Click"/>

                    <ProgressBar Height="12" Margin="0,25,0,0" Foreground="#00C853" Background="#333" />
                </StackPanel>
            </Border>

            <!-- RIGHT PANEL (LOGS) -->
            <Border Background="#181818" 
                    CornerRadius="10"
                    Padding="10"
                    BorderBrush="#2A2A2A"
                    BorderThickness="1">
                <DockPanel>
                    <TextBlock Text="Logs" 
                               FontWeight="Bold" 
                               FontSize="16" 
                               Foreground="#00C853"
                               Margin="5"/>
                    <RichTextBox x:Name="LogBox"
                                 DockPanel.Dock="Bottom"
                                 Margin="0,10,0,0"
                                 IsReadOnly="True"
                                 Background="#101010"
                                 Foreground="#E0E0E0"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="10"/>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
