<Application.Resources>
    <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" ShadowDepth="3" Color="#000000" Opacity="0.4"/>

    <!-- Green button -->
    <Style x:Key="mainButton" TargetType="Button" BasedOn="{StaticResource acceptButton}">
        <Setter Property="Background" Value="#00C853"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="160"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Effect" Value="{StaticResource ShadowEffect}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="6"
                            Padding="10"
                            Cursor="Hand">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Path input -->
    <Style TargetType="TextBox" x:Key="path">
        <Setter Property="Background" Value="#252525"/>
        <Setter Property="Foreground" Value="#E0E0E0"/>
        <Setter Property="BorderBrush" Value="#333"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="Margin" Value="0,0,6,0"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>

    <!-- Small green button -->
    <Style x:Key="acceptButton" TargetType="Button">
        <Setter Property="Background" Value="#2E7D32"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Padding" Value="8 4"/>
        <Setter Property="Height" Value="34"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="5"
                            Padding="6"
                            Cursor="Hand">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Checkboxes -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="Margin" Value="0,5,0,10"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- Labels -->
    <Style TargetType="Label">
        <Setter Property="Foreground" Value="#AAAAAA"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>
</Application.Resources>
